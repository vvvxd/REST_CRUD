<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/servlet_crud</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">123</property>
        <property name="hbm2ddl.auto">validate</property>
        <property name="show_sql">true</property>
        <mapping class="org.example.REST_CRUD.model.Event"/>
        <mapping class="org.example.REST_CRUD.model.User"/>
        <mapping class="org.example.REST_CRUD.model.File"/>
    </session-factory>
</hibernate-configuration>